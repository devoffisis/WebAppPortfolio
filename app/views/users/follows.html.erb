<h1>フォロー一覧</h1>
<% @users.each do |user| %>
  <hr>
  <p><span>email: </span><%= link_to user.email, user_path(user.id) %></p>
  <% if current_user != user %>
    <% if user.followed_by?(current_user) %>
      <p><%=link_to "フォロー解除", user_follows_path(user.id), method: :delete, class: 'btn btn-danger' %></p>
    <% else %>
      <p><%=link_to "フォローする", user_follows_path(user.id), method: :post, class: 'btn btn-primary' %></p>
    <% end %>
  <% end %>
<% end %>
