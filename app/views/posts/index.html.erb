<% if user_signed_in? %>
  <% @posts.each do |post| %>
    <p><%= post.caption %></p>
    <%= image_tag post.image.url(:medium) %>
  <% end %>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>友達の写真や動画をチェックしよう</h1>
    </div>
  </div>
<% end %>
